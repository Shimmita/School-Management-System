<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgParentDetails"
                android:layout_width="100dp"
                android:layout_height="165dp"
                android:scaleType="centerCrop"
                android:layout_marginEnd="5dp"
                android:src="@drawable/img_student" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvParentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="georgia"
                        android:textColor="#358685"
                        android:text="@string/michael_oliech"
                        android:textStyle="bold|italic" />


                    <TextView
                        android:id="@+id/tvParentPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textIsSelectable="true"
                        android:text="@string/_0712537337"
                        android:textStyle="italic|bold" />


                    <TextView
                        android:id="@+id/tvParentEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:autoLink="email"
                        android:layout_marginBottom="10dp"
                        android:textColorLink="@color/purple_200"
                        android:textIsSelectable="true"
                        android:text="@string/michael_gmail_com"
                        android:textStyle="italic" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>